<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Detalhes"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		title="{i18n>TituloTelaDeDetalhes}"
		showNavButton="true"
		navButtonPress="aoClicarNoBotaoDeVoltar">
		<headerContent>
			<Button 
				id="idBotaoParaEditarProduto" 
				icon="sap-icon://edit" 
				text="{i18n>BotaoParaEditarProduto}" 
				press="aoPressionarEditar"/>
			<Button 
				id="idBotaoParaDeletarProduto" 
				icon="sap-icon://delete" 
				text="{i18n>BotaoParaDeletarProduto}" 
				press="aoPressionarExcluir"/>
				</headerContent>
		<ObjectHeader
			id="IdObjectHeader"
			intro="{Produto>nome}"
			title="{Produto>marca}">
		<attributes>
			<ObjectAttribute title="{i18n>IdTelaDeDetalhes}" text = "{Produto>id}" />
        	<ObjectAttribute title="{i18n>CodigoDeBarrasTelaDeDetalhes}" text = "{Produto>codigoBarras}" />
			<ObjectAttribute title="{i18n>DataVencimentoTelaDeDetalhes}" 
				text="{ path: 'Produto>dataVencimento',
				type: 'sap.ui.model.type.Date',
				formatOptions: {
					source: {pattern: 'yyyy-MM-ddTHH:mm:ss.SS'},
					style: 'medium'
				}}"/>
			<ObjectAttribute title="{i18n>DataCadastroTelaDeDetalhes}" 
				text="{ path: 'Produto>dataCadastro',
				type: 'sap.ui.model.type.DateTime',
				formatOptions: {
					source: {pattern: 'yyyy-MM-ddTHH:mm:ss.SS'},
					style: 'medium'
				}}"/>
   		</attributes>
	</ObjectHeader>
	</Page>
</mvc:View>