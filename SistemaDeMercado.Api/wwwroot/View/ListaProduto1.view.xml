<mvc:View controllerName="sap.ui.demo.walkthrough.controller.ListaProduto" 
    xmlns="sap.ui.webc.main" 
        xmlns:fiori="sap.ui.webc.fiori" 
            xmlns:mvc="sap.ui.core.mvc" 
                height="100%">
	<fiori:Page>
		<fiori:header>
			<fiori:Bar>
				<fiori:middleContent>
					<Title text="{i18n>TituloPaginaListaDeProdutos}"></Title>
				</fiori:middleContent>
			</fiori:Bar>
		</fiori:header>
		<fiori:content>
			<Panel
                  headerText="{i18n>TituloPainelListaDeProdutos}">
			<Toast id="demoToast" duration="1000"></Toast>
			<Table
				id="idTabelaDeProdutos"
				stickyColumnHeader="true"
				rowClick="aoClicarNaListaDeProduto"
				mode="SingleSelect"
				selectionChange="handleSelectionChange"
				rows="{
					path: 'listaProdutos>/'
				}">
				<columns>
					<TableColumn>
						<Label text="{i18n>ColunaId}" />
					</TableColumn>
					<TableColumn>
						<Label text="{i18n>ColunaNome}" />
					</TableColumn>
					<TableColumn>
						<Label text="{i18n>ColunaMarca}" />
					</TableColumn>
					<TableColumn>
						<Label text="{i18n>ColunaCodigoDeBarras}" />
					</TableColumn>
					<TableColumn>
						<Label text="{i18n>ColunaDataDeCadastro}" />
					</TableColumn>
					<TableColumn>
						<Label text="{i18n>ColunaDataDeVencimento}" />
					</TableColumn>
				</columns>
				<rows>
					<TableRow type="Active">
						<cells>
							<TableCell>
								<content>
									<Label text="{listaProdutos>id}" />
								</content>
							</TableCell>
							<TableCell>
								<content>
									<Label text="{listaProdutos>name}"/>
								</content>
							</TableCell>
							<TableCell>
								<content>
									<Label text="{listaProdutos>username}" />
								</content>
							</TableCell>
							<TableCell>
								<content>
									<Label text="{listaProdutos>email}" />
								</content>
							</TableCell>
							<TableCell>
								<content>
									<Label text="{listaProdutos>address/street}" />
								</content>
							</TableCell>
							<TableCell>
								<content>
									<Label text="{listaProdutos>address/suite}" />
								</content>
							</TableCell>
						</cells>
					</TableRow>
				</rows>
			</Table>
				</Panel>
				<Button
         		id="BotaoTelaDeCadastro"
				width="15%"
				icon="sap-icon://add"
         		text="{i18n>BotaoDeCadastro}"
         		class="sapUiSmallMarginEnd"/>
		</fiori:content>
	</fiori:Page>
</mvc:View>