<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.ListaProduto"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Panel accessibleRole="Region">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>BarraDePesquisa}"/>
				<ToolbarSpacer/>
				<SearchField
					width="50%"
					search="aoClicarNaBarraDePesquisa"/>
			</Toolbar>
		</headerToolbar>
		<Table
			id="idTabelaDeProdutos"
			class="sapUiResponsiveMargin"
			width="auto"
			items="{
					path: 'listaProdutos>/'
				}">	
			<columns>
				<Column>
					<Text text="{i18n>ColunaNome}"/>
				</Column>
				<Column>
					<Text text="{i18n>ColunaMarca}"/>
				</Column>
				<Column>
					<Text text="{i18n>ColunaCodigoDeBarras}"/>
				</Column>
				<Column>
					<Text text="{i18n>ColunaDataDeCadastro}"/>
				</Column>
				<Column>
					<Text text="{i18n>ColunaDataDeVencimento}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem
					type="Navigation"
					press="aoClicarNaListaDeProduto">
					<cells>
							<Text text="{listaProdutos>id}"/>
							<Text text="{listaProdutos>name}"/>
							<Text text="{listaProdutos>address/suite}"/>
							<Text text="{listaProdutos>address/city}"/>
							<Text text="{listaProdutos>address/street}"/>
						</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Panel>
    <Button
         		id="BotaoTelaDeCadastro"
				width="15%"
				icon="sap-icon://add"
         		text="{i18n>BotaoDeCadastro}"
         		class="sapUiSmallMarginEnd"/>
</mvc:View>